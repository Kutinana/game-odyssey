<a href="{{ project.url }}" class="block rounded-lg overflow-hidden bg-neutral-800 hover:bg-neutral-700 transition">
  {% if project.data.banner %}
  <img src="{{ project.url }}{{ project.data.banner | replace('./','') }}" alt="{{ project.data.title }}" class="w-full h-40 object-cover" />
  {% endif %}
  <div class="p-4">
    <h3 class="text-base font-semibold text-white">{{ project.data.title }}</h3>
    <p class="text-sm text-neutral-300 mt-1">{{ project.templateContent | striptags | truncate(100) }}</p>
  </div>
</a>

